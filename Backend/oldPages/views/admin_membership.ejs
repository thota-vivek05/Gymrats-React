            <!-- REPLACE THE ENTIRE TBODY SECTION -->
<tbody id="memberTableBody">
  <% if (memberships && memberships.length > 0) { %>
    <% memberships.forEach(user => { %>
      <% if (user && user.full_name) { %>
        <tr>
          <td><%= user.full_name %></td>
