                    history.unshift({
                        week: `Week ${history.length + 1}`,
                        weight: 0,
                        date: new Date(Date.now() - (6 - history.length) * 24 * 60 * 60 * 1000)
                    });
                }
                return { exerciseName, currentWeight, history };
            });

            const exerciseHistories = await Promise.all(historyPromises);

