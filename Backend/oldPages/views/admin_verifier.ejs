<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GymRats - Content Verifiers Management</title>
    <link rel="stylesheet" href="/admin/admin.css">
    <link rel="stylesheet" href="/admin/admin_verifier.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap">
    <style>
        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
        }

        .modal-content {
            background-color: #2d2d2d;
            margin: 5% auto;
            padding: 0;
            border-radius: 12px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            border-bottom: 1px solid #444;
        }

        .modal-header h3 {
            margin: 0;
            color: #f1f1f1;
            font-size: 1.5rem;
        }

        .close-modal {
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            padding: 0 10px;
        }

        .close-modal:hover {
            color: #f1f1f1;
        }

        .modal-body {
            padding: 0;
        }

        #verifierFormFrame {
            width: 100%;
            height: 500px;
            border: none;
            border-radius: 0 0 12px 12px;
        }
    </style>
</head>

<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="/home" class="brand-name">GymRats</a>
            </div>
            <ul class="nav-menu">
                <li class="nav-item">
                    <a href="/admin/dashboard" class="nav-link">
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/users" class="nav-link">
                        <span>Users</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/trainers" class="nav-link">
                        <span>Trainers</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/memberships" class="nav-link">
                        <span>Memberships</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/exercises" class="nav-link">
                        <span>Exercises</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/admin/verifier" class="nav-link active">
                        <span>Verifiers</span>
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Content Verifiers Management</h2>
                <div class="right-container">
                    <div class="user-info">
                        <div class="avatar">A</div>
                        <span>Admin</span>
                    </div>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-container">
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Total Verifiers</h3>
                            </div>
                            <div class="stats-number"><%= totalVerifiers || 0 %></div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Approved Trainers</h3>
                            </div>
                            <div class="stats-number"><%= approvedTrainers || 0 %></div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Pending Trainers</h3>
                            </div>
                            <div class="stats-number"><%= pendingTrainers || 0 %></div>
                        </div>
                    </div>
                </div>
                <div class="stats-card">
                    <div class="stats-content">
                        <div class="stats-info">
                            <div class="stats-header">
                                <h3>Rejected Trainers</h3>
                            </div>
                            <div class="stats-number"><%= rejectedTrainers || 0 %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-bar">
                    <input type="text" id="verifierSearchInput" placeholder="Search verifiers by name, expertise or status...">
                </div>
            </div>

            <!-- Tab Navigation -->
            <div class="tab-container">
                <button class="tab active" data-tab="all">All Verifiers</button>
            </div>

            <!-- Verifier Table -->
            <div class="section">
                <div class="table-header">
                    <h3 class="section-title">Verifier List</h3>
                    <button class="add-btn" id="addVerifierBtn">+ Add New Verifier</button>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="verifierTableBody">
                            <% if (verifiers && verifiers.length > 0) { %>
                                <% verifiers.forEach(verifier => { %>
                                    <tr>
                                        <td>
                                            <div class="user-info verifier-info">
                                                <div class="avatar"><%= verifier.name.charAt(0) %></div>
                                                <span><%= verifier.name %></span>
                                            </div>
                                        </td>
                                        <td><%= verifier.email %></td>
                                        <td><%= verifier.phone || 'N/A' %></td>
                                        <td><span class="status active">Active</span></td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="no-data">No verifiers found</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Content Distribution Chart -->
            <div class="section">
                <div class="section-header">
                    <h3 class="section-title">Content Verification Distribution</h3>
                </div>
                <div class="charts-container">
                    <div class="chart-card">
                        <div class="chart-container">
                            <canvas id="contentTypeChart"></canvas>
                        </div>
                    </div>
                    <div class="chart-card">
                        <div class="chart-container">
                            <canvas id="verifierPerformanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Add Verifier Modal -->
    <div id="addVerifierModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Add New Verifier</h3>
                <span class="close-modal">&times;</span>
            </div>
            <div class="modal-body">
                <iframe src="/admin/verifier_form" id="verifierFormFrame"></iframe>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Modal functionality
            const addVerifierBtn = document.getElementById('addVerifierBtn');
            const modal = document.getElementById('addVerifierModal');
            const closeModal = document.querySelector('.close-modal');

            if (addVerifierBtn && modal) {
                addVerifierBtn.addEventListener('click', function () {
                    console.log('Add Verifier button clicked');
                    modal.style.display = 'block';
                });
            }

            if (closeModal) {
                closeModal.addEventListener('click', function () {
                    modal.style.display = 'none';
                });
            }

            // Close modal when clicking outside
            window.addEventListener('click', function (event) {
                if (event.target === modal) {
                    modal.style.display = 'none';
                }
            });

            // Setup other functionality
            setupResponsiveFeatures();
            setupTabNavigation();
            setupSearchFunctionality();
            initializeCharts();
        });

        function setupResponsiveFeatures() {
            const navItems = document.querySelectorAll('.nav-link');
            navItems.forEach(item => {
                item.addEventListener('click', function (e) {
                    navItems.forEach(link => link.classList.remove('active'));
                    this.classList.add('active');
                });
            });
        }

        function setupTabNavigation() {
            const tabs = document.querySelectorAll('.tab');
            const verifierRows = document.querySelectorAll('#verifierTableBody tr');

            tabs.forEach(tab => {
                tab.addEventListener('click', function () {
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');

                    const tabType = this.getAttribute('data-tab');
                    verifierRows.forEach(row => {
                        const statusCell = row.querySelector('.status');
                        if (tabType === 'all') {
                            row.style.display = '';
                        } else if (statusCell) {
                            if (statusCell.textContent.toLowerCase().includes(tabType)) {
                                row.style.display = '';
                            } else {
                                row.style.display = 'none';
                            }
                        }
                    });
                });
            });
        }

        function setupSearchFunctionality() {
            const searchInput = document.getElementById('verifierSearchInput');
            const verifierRows = document.querySelectorAll('#verifierTableBody tr');

            if (searchInput) {
                searchInput.addEventListener('keyup', function () {
                    const searchTerm = this.value.toLowerCase();
                    verifierRows.forEach(row => {
                        const textContent = row.textContent.toLowerCase();
                        if (textContent.includes(searchTerm)) {
                            row.style.display = '';
                        } else {
                            row.style.display = 'none';
                        }
                    });
                });
            }
        }

        function initializeCharts() {
            // Content Type Distribution Chart
            const contentTypeCtx = document.getElementById('contentTypeChart');
            if (contentTypeCtx) {
                new Chart(contentTypeCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Exercise Form', 'Nutrition Plans', 'Workout Programs', 'Equipment Use', 'Safety Guides'],
                        datasets: [{
                            data: [35, 25, 20, 12, 8],
                            backgroundColor: ['#8A2BE2', '#9370DB', '#BA55D3', '#DA70D6', '#EE82EE'],
                            borderWidth: 1,
                            borderColor: '#1e1e1e'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                                labels: { color: '#f1f1f1', padding: 20, font: { size: 12 } }
                            },
                            title: {
                                display: true,
                                text: 'Content Types Verified',
                                color: '#f1f1f1',
                                font: { size: 16 }
                            }
                        }
                    }
                });
            }

            // Verifier Performance Chart
            const performanceCtx = document.getElementById('verifierPerformanceChart');
            if (performanceCtx) {
                new Chart(performanceCtx, {
                    type: 'bar',
                    data: {
                        labels: ['High Performers (90%+)', 'Med Performers (70-89%)', 'New Verifiers (<10 reviews)'],
                        datasets: [{
                            label: 'Verifier Count',
                            data: [32, 15, 5],
                            backgroundColor: ['#4CAF50', '#FFC107', '#8A2BE2'],
                            borderWidth: 1,
                            borderColor: '#1e1e1e'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: { color: '#f1f1f1' },
                                grid: { color: 'rgba(255, 255, 255, 0.1)' }
                            },
                            x: {
                                ticks: { color: '#f1f1f1' },
                                grid: { display: false }
                            }
                        },
                        plugins: {
                            legend: { display: false },
                            title: {
                                display: true,
                                text: 'Verifier Performance Distribution',
                                color: '#f1f1f1',
                                font: { size: 16 }
                            }
                        }
                    }
                });
            }
        }

        // Function to refresh the page after form submission (to be called from iframe)
        function refreshVerifierList() {
            window.location.reload();
        }
    </script>
</body>
</html>