            </div>

            <div class="footer-column">
                <h3>Connect With Us</h3>
                <ul>
                    <li><a href="/trainer_form">Become a Trainer</a></li>
                </ul>
                <ul>
                    <li><a href="/contact">Contact Us</a></li>
                </ul>
                <p class="copyright">GymRats Â© 2025. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Toggle sidebar menu
        document.querySelector('.toggle-menu').addEventListener('click', function () {
            document.querySelector('.dashboard-container').classList.toggle('sidebar-collapsed');
        });

        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('menuIcon').addEventListener('click', function () {
                document.getElementById('sideNavbar').classList.add('open');
            });

            document.getElementById('closeBtn').addEventListener('click', function () {
                document.getElementById('sideNavbar').classList.remove('open');
            });

            // Load dashboard data using fetch
            loadDashboardData();
        });

        // Function to load dashboard data
        async function loadDashboardData() {
            try {
                const response = await fetch('/verifier/api/dashboard');
                
                if (!response.ok) {
                    if (response.status === 401) {
                        window.location.href = '/verifier/login';
                        return;
                    }
                    throw new Error('Failed to load dashboard data');
                }
                
                const data = await response.json();
                
                // Hide loading indicator
                document.getElementById('loadingIndicator').style.display = 'none';
                
                // Update UI with fetched data
                updateDashboardUI(data);
            } catch (error) {
                console.error('Error loading dashboard:', error);
                document.getElementById('loadingIndicator').innerHTML = 
                    '<i class="fas fa-exclamation-triangle"></i><span>Error loading dashboard data</span>';
            }
        }

        // Function to update UI with fetched data
        function updateDashboardUI(data) {
            // Update verifier info
            document.getElementById('verifierName').textContent = data.verifier.name;
            document.getElementById('welcomeMessage').textContent = 
                `Welcome back, ${data.verifier.name}! Here's your verification overview.`;
            
            // Update stats
            document.getElementById('pendingCount').textContent = data.stats.pendingCount;
            document.getElementById('completedCount').textContent = data.stats.completedCount;
            document.getElementById('ratingCount').textContent = `${data.stats.rating}/5`;
            
            // Show stats container
            document.getElementById('statsContainer').style.display = 'flex';
            
            // Update recent applications table
            updateRecentApplicationsTable(data.recentApplications);
            
            // Update recent approved trainers
            updateRecentApprovedTrainers(data.recentApprovedTrainers);
            
            // Show sections
            document.getElementById('recentVerificationsSection').style.display = 'block';
            document.getElementById('approvedTrainersSection').style.display = 'block';
        }

        // Function to update recent applications table
        function updateRecentApplicationsTable(applications) {
            const tableBody = document.getElementById('recentApplicationsTable');
            
            if (!applications || applications.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="5">No recent verification requests.</td></tr>';
                return;
            }
            
            tableBody.innerHTML = applications.map(app => `
                <tr>
                    <td>
                        <div class="user-info">
                            <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?w=40&h=40&fit=crop&auto=format"
                                alt="${app.firstName} ${app.lastName}" />
                            <div>
                                <p class="user-name">${app.firstName} ${app.lastName}</p>
                                <p class="user-email">${app.email}</p>
                            </div>
                        </div>
                    </td>
                    <td>${app.specializations ? app.specializations.join(', ') : 'Not specified'}</td>
                    <td>${app.createdAt ? new Date(app.createdAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) : 'Unknown'}</td>
                    <td><span class="status ${app.status.toLowerCase().replace(' ', '-')}">${app.status}</span></td>
                    <td>
                        ${app.status === 'Pending' || app.status === 'In Progress' ? 
                            `<div class="action-buttons">
                                <button class="btn-approve" onclick="quickAction('approve', '${app._id}')">Approve</button>
                                <button class="btn-reject" onclick="quickAction('reject', '${app._id}')">Reject</button>
                            </div>` : 
                            `<button class="btn-view">View Details</button>`
                        }
                    </td>
                </tr>
            `).join('');
        }

        // Function to update recent approved trainers
        function updateRecentApprovedTrainers(trainers) {
            const trainersList = document.getElementById('recentApprovedTrainersList');
            
            if (!trainers || trainers.length === 0) {
                trainersList.innerHTML = `
                    <div class="message-item">
                        <div class="message-content">
                            <p>No recently approved trainers.</p>
                        </div>
                    </div>
                `;
                return;
            }
            
            trainersList.innerHTML = trainers.map(trainer => `
                <div class="message-item">
                    <div class="message-avatar">
                        <img src="https://images.unsplash.com/photo-1517841905240-472988babdf9?w=40&h=40&fit=crop&auto=format" 
                             alt="${trainer.firstName} ${trainer.lastName}" />
                    </div>
                    <div class="message-content">
                        <div class="message-header">
                            <h4>${trainer.firstName} ${trainer.lastName}</h4>
                            <span class="message-time">
                                ${trainer.updatedAt ? new Date(trainer.updatedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) : 'Recently'}
                            </span>
                        </div>
                        <p class="message-text">
                            <strong>Specializations:</strong> ${trainer.specializations ? trainer.specializations.join(', ') : 'Not specified'}
                        </p>
                        <p class="message-text">
                            <strong>Email:</strong> ${trainer.email}
                        </p>
                    </div>
                </div>
            `).join('');
        }

        // Function to handle quick actions (approve/reject)
        async function quickAction(action, applicationId) {
            if (!confirm(`Are you sure you want to ${action} this trainer?`)) {
                return;
            }
            
            try {
                const response = await fetch('/verifier/api/quick-action', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        action: action,
                        applicationId: applicationId
                    })
                });
                
                if (!response.ok) {
                    throw new Error('Failed to process action');
                }
                
                const result = await response.json();
                
                if (result.success) {
                    // Reload dashboard data to reflect changes
                    loadDashboardData();
                } else {
                    alert('Failed to process action');
                }
            } catch (error) {
                console.error('Error processing action:', error);
                alert('Error processing action');
            }
        }
    </script>
