                    </li>
                </ul>
            </div>
            <div class="sidebar-footer">
                <a href="/home">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation -->
            <div class="top-navbar">
                <div class="toggle-menu">
                    <i class="fas fa-bars"></i>
                </div>
                
                <div class="navbar-right">
                    <div class="user-profile">
                        <span id="verifierName">Loading...</span>
                    </div>
                </div>
            </div>

            <!-- Dashboard Content -->
            <div class="dashboard-content">
                <div class="page-header">
                    <h1>Verifier Dashboard</h1>
                    <p id="welcomeMessage">Loading dashboard...</p>
                </div>

                <!-- Loading Indicator -->
                <div id="loadingIndicator" class="loading-indicator">
                    <i class="fas fa-spinner fa-spin"></i>
                    <span>Loading dashboard data...</span>
                </div>

                <!-- Stats Cards -->
                <div class="stats-container" id="statsContainer" style="display: none;">
                    <div class="stat-card">
                        <div class="stat-icon pending">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <div class="stat-details">
                            <h3>Pending Verifications</h3>
                            <p class="stat-count" id="pendingCount">0</p>
                            
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon completed">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-details">
                            <h3>Completed Verifications</h3>
                            <p class="stat-count" id="completedCount">0</p>
                            
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-icon rating">
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="stat-details">
                            <h3>Rating</h3>
                            <p class="stat-count" id="ratingCount">0/5</p>
                            <p class="stat-trend same">
                                <i class="fas fa-minus"></i> Same as last month
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Recent Verifications -->
                <div class="section-container" id="recentVerificationsSection" style="display: none;">
                    <div class="section-header">
                        <h2>Recent Verification Requests</h2>
                        <a href="/verifier/pendingverifications" class="view-all">View All</a>
                    </div>
                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>Trainer</th>
                                    <th>Specializations</th>
                                    <th>Submitted Date</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="recentApplicationsTable">
                                <!-- Will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Calendar and Messages -->
                <div class="split-section">
                    <!-- Recent Approved Trainers -->
                    <div class="messages-container" id="approvedTrainersSection" style="display: none;">
                        <div class="section-header">
                            <h2>Recently Approved Trainers</h2>
                            <a href="/verifier/approvedverifications" class="view-all">View All</a>
                        </div>
                        <div class="message-list" id="recentApprovedTrainersList">
                            <!-- Will be populated by JavaScript -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="site-footer">
